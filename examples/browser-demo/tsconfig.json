{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "baseUrl": ".",
    "paths": {
      "@filearchitect/core": ["../../packages/core/dist"]
    }
  },
  "include": ["*.ts"],
  "references": [{ "path": "../../packages/core" }]
}
