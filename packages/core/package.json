{
  "name": "@filearchitect/core",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "version": "0.1.1",
  "description": "Create file and directory structures from text descriptions",
  "type": "commonjs",
  "main": "dist/index.js",
  "browser": "dist/browser.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.browser.json",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest watch",
    "prepublishOnly": "pnpm build"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": "./dist/browser.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "default": "./dist/browser.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "file",
    "directory",
    "structure",
    "generator",
    "filesystem",
    "scaffolding"
  ],
  "author": "Sebastien Lavoie",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/filearchitect/file-architect-core.git"
  },
  "bugs": {
    "url": "https://github.com/filearchitect/file-architect-core/issues"
  },
  "homepage": "https://filearchitect.com",
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  },
  "dependencies": {
    "chalk": "^4.1.2"
  }
}
